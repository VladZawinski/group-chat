generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:sudo404notfound$@localhost:3306/groupchat"
}

model User {
  id      Int      @id @default(autoincrement())
  username String @unique
  name String
  role Role @default(USER)
  messages Message[]
  blockedUsers BlockedUser[] @relation("block")
  bannedUser BannedUser?
  createdAt  DateTime   @default(now())
}

model Message {
  id      Int     @id @default(autoincrement())
  content String
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt  DateTime   @default(now())
}

model BlockedUser {
  id        Int     @id @default(autoincrement())
  userId Int
  blockedId Int
  blocked   User   @relation("block", fields: [blockedId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, blockedId], name: "unique_user_blocked_user")
}

model BannedUser {
  id        Int        @id @default(autoincrement())
  userId    Int @unique
  user      User       @relation(fields: [userId], references: [id])
  reason    String
  createdAt DateTime   @default(now())
}

enum Role {
  ADMIN
  USER
}
